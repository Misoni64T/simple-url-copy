{
    "name": "Simple URL Copy",
    "description": "A small extension that helps you to copy URL.",
    "author": "@ikedaosushi and Misoni",
    "version": "1.5.1",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon.svg",
        "24": "icons/icon.svg",
        "32": "icons/icon.svg",
        "48": "icons/icon.svg"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.svg",
        "theme_icons": [{
                "dark": "icons/icon-dark.svg",
                "light": "icons/icon-light.svg",
                "size": 16
            },
            {
                "dark": "icons/icon-dark.svg",
                "light": "icons/icon-light.svg",
                "size": 24
            },
            {
                "dark": "icons/icon-dark.svg",
                "light": "icons/icon-light.svg",
                "size": 32
            },
            {
                "dark": "icons/icon-dark.svg",
                "light": "icons/icon-light.svg",
                "size": 64
            }
        ]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Open popup.html"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "clipboardWrite"
    ],
    "content_security_policy": "default-src 'self'",
    "devtools_page": "popup.html"
}
